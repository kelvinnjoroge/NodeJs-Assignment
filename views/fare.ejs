<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Fare</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" href="/public/icon1.png">
    <link rel="stylesheet" type="text/css" media="screen" href="css/main.css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
        crossorigin="anonymous">
    <script src="js/main.js"></script>
</head>

<body>

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="/">
            <img src="icon1.png" width="40" height="40" alt="">
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/">Home </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/info">Info</a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" href="/fare">Compare fares <span class="sr-only">(current)</span> </a>
                </li>

            </ul>
            <form class="form-inline my-2 my-lg-0">
                <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
            </form>
        </div>
    </nav>

    <% if(count != null){ %>
    <div class="alert alert-success">
        <div class="container">
            <p>Found
                <%= count %> flights</p>
        </div>
    </div>

    <% } %>

    <% if(error != null){ %>
    <div class="alert alert-danger">
        <div class="container">
            <strong>Error!</strong>
            <%= error %>
        </div>
    </div>

    <% } %>

    <div class="d-flex flex-row justify-content-center align-items-center flex-wrap">
        <div class="col-md-10 mt-4" id="form-link">
            <form method="POST" action="/compare" class="form-inline">
                <div class="form-row align-items-center justify-content-center">

                    <label class="sr-only" for="from">From</label>
                    <div class="input-group mb-2 mr-sm-2 p-2">
                        <div class="input-group-prepend">
                            <div class="input-group-text">From</div>
                        </div>
                        <input type="text" class="form-control" id="from" placeholder="Anywhere" name="from">
                    </div>

                    <label class="sr-only" for="destination">Destination</label>
                    <div class="input-group mb-2 mr-sm-2 p-2">
                        <div class="input-group-prepend">
                            <div class="input-group-text">To</div>
                        </div>
                        <input type="text" class="form-control" id="destination" placeholder="Anywhere" name="to">
                    </div>

                    
                    
                    <div class="p-2 ml-auto mb-2">
                        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Filter</button>
                    </div>
                </div>
            </form>
        </div>
    </div>



    <div class="d-flex justify-content-center  mt-4">
        <table class="table table-bordered">
            <col>
            <colgroup></colgroup>
            <colgroup></colgroup>
            <colgroup></colgroup>
            <colgroup></colgroup>
            <colgroup></colgroup>
            <tr>
                <th scope="col">#</th>
                <th scope="col">From</th>
                <th scope="col">Departure Time</th>
                <th scope="col">To</th>
                <th scope="col">Arrival Time</th>
                <th scope="col" colspan="3">Fare</th>
            </tr>
            <tr>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
                <th>First Class</th>
                <th>Business Class</th>
                <th>Economy Class</th>
            </tr>
            <colgroup span="3"></colgroup>
            <tbody>
                <% for(var i = 0; i < data.length; i++){ %>
                <tr>
                    <th scope="row">
                        <%= (i+1) %>
                    </th>
                    <td>
                        <%= data[i]["From"] %>
                    </td>
                    <td>
                        <%= data[i]["Departure Time"] %>
                    </td>
                    <td>
                        <%= data[i]["To"] %>
                    </td>
                    <td>
                        <%= data[i]["Arrival Time"] %>
                    </td>
                    <td>
                        <%= data[i]["Fare"]["First Class"] %>
                    </td>
                    <td>
                        <%= data[i]["Fare"]["Business Class"] %>
                    </td>
                    <td>
                        <%= data[i]["Fare"]["Economy Class"] %>
                    </td>
                </tr>
                <% } %>
            </tbody>
        </table>
    </div>


    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
        crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
        crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
        crossorigin="anonymous"></script>
</body>

</html>